<Window x:Class="AppDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDesktop"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="450" MinWidth="800" Closing="Window_Closing" Background="#FF9E9E9E">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.66*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center"
                       TextWrapping="Wrap">
                <RadioButton Command="{Binding AdminCheck}"
                             GroupName="Users"
                             Content="Админ"/>
                <RadioButton Command="{Binding TeacherCheck}"
                             GroupName="Users"
                             Content="Учитель"/>
                <RadioButton Command="{Binding StudentCheck}"
                             GroupName="Users"
                             Content="Студент"/>
            </TextBlock>
            <TextBlock Text="Авторизация"
                   HorizontalAlignment="Center"/>
            <StackPanel DataContext="{Binding Model}">
                <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                     Height="30"
                         Margin="0,0,0,5"></TextBox>
                <PasswordBox
                     Height="30"
                     Margin="0,0,0,5"
                     x:Name="PasswordBox"></PasswordBox>
            </StackPanel>
            <Button Command="{Binding LogIn}"
                    CommandParameter="{Binding ElementName=PasswordBox}"
                    Height="30"
                    Content="Войти"/>
        </StackPanel>
    </Grid>
</Window>
