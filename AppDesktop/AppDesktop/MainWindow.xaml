    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.66*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center"
                       TextWrapping="Wrap">
                <RadioButton Command="{Binding AdminCheck}"
                             GroupName="Users"
                             Content="Админ"/>
                <RadioButton Command="{Binding TeacherCheck}"
                             GroupName="Users"
                             Content="Учитель"/>
                <RadioButton Command="{Binding StudentCheck}"
                             GroupName="Users"
                             Content="Студент"/>
            </TextBlock>
            <TextBlock Text="Авторизация"
                   HorizontalAlignment="Center"/>
            <StackPanel DataContext="{Binding Model}">
                <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"
                         Margin="0,0,0,5"
                         Tag="Введите логин"
                         Style="{StaticResource MyWaterMarkStyle}"/>
                <PasswordBox
                     Height="30"
                     Margin="0,0,0,5"
                     x:Name="PasswordBox"
                     Tag="Введите пароль"/>
            </StackPanel>
            <Button Command="{Binding LogIn}"
                    CommandParameter="{Binding ElementName=PasswordBox}"
                    Height="30"
                    Content="Войти"/>
        </StackPanel>
    </Grid>
</Window>
