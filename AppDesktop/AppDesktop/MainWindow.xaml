    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.66*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="Log"
                    Grid.Column="1"
                    VerticalAlignment="Center">
            <TextBlock Text="Авторизация"
                   HorizontalAlignment="Center"/>
            <StackPanel DataContext="{Binding Model}">
                <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"
                         Margin="0,0,0,5"
                         Tag="Введите логин"
                         Style="{StaticResource MyWaterMarkStyle}"
                         MaxLength="20"/>
                <PasswordBox Height="30"
                             Margin="0,0,0,5"
                             x:Name="PasswordBox"
                             Tag="Введите пароль"
                             MaxLength="20"/>
            </StackPanel>
            <Button Command="{Binding LogIn}"
                    CommandParameter="{Binding ElementName=PasswordBox}"
                    Height="30"
                    Content="Войти"/>
            <Button Command="{Binding ForgotPassword}"
                    Height="30"
                    Margin="0,5,0,0"
                    Content="Забыл пароль (для студентов)"/>
        </StackPanel>
        <StackPanel x:Name="ForgotPass"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <StackPanel DataContext="{Binding Model}">
                <TextBlock Text="Восстановление пароля"
                   HorizontalAlignment="Center"/>
                <TextBox Text="{Binding LoginForChange, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"
                         Margin="0,0,0,5"
                         Tag="Введите логин"
                         Style="{StaticResource MyWaterMarkStyle}"
                         MaxLength="20"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MyWaterMarkStyle}"
                         Height="30"
                         Margin="0,0,0,5"
                         Tag="Введите вашу эл.почту"
                         MaxLength="35"/>
            </StackPanel>
            <Button Command="{Binding GetNewPass}"
                    Height="30"
                    Content="Запросить новый пароль"/>
        </StackPanel>
    </Grid>
</Window>
